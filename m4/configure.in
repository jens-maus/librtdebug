AC_PREREQ(2.57)
AC_INIT(rtdebug, 2.0.4)
AC_COPYRIGHT(Copyright (c) 2003-2008 by Jens Langner <Jens.Langner@light-speed.de>)
AC_REVISION($Revision$)
AC_CONFIG_SRCDIR([src])
AC_CONFIG_HEADER([src/includes/config.h])

# Checks for host
AC_MSG_CHECKING(for host operating system)
AC_SUBST(HOST_OS, `uname -s`)
AC_MSG_RESULT(${HOST_OS})

# Checks for host processor type
AC_MSG_CHECKING(for host system processor type)
AC_SUBST(HOST_CPU, `uname -p`)
AC_MSG_RESULT(${HOST_CPU})

# check if the user wants to have ansi color output
AC_ANSI_COLOR

# Checks for programs.
AC_PROG_CXX
AC_GNU_SOURCE

# Check is the user wants to build a static library
AC_ENABLE_STATIC_LIB

# Check for other libraries.
AC_CHECK_LIB(pthread, pthread_create)

# own macros
AC_C_BIGENDIAN
AC_ANSI_COLOR

# checking gcc version
AC_PROG_GCC_VERSION

# Checks for library functions.
AC_FUNC_MALLOC
AC_CHECK_FUNCS([gettimeofday vasprintf])
AC_CHECK_GETTICKCOUNT

# Checks for some tools which we need
AC_PATH_PROG(QMAKE_PATH, qmake, no, [$PATH:$QTDIR/bin:/usr/qt/bin:/usr/local/qt/bin:/Developer/qt/bin])
if test $QMAKE_PATH = "no"; then
	AC_MSG_ERROR([Cannot find qmake, check your path settings])
fi
AC_PATH_PROG(MKDIR_PATH, mkdir)
AC_PATH_PROG(CP_PATH, cp)
AC_PATH_PROG(MV_PATH, mv)
AC_PATH_PROG(TAR_PATH, tar)
AC_PATH_PROG(GZIP_PATH, gzip)
AC_PATH_PROG(RM_PATH, rm)
AC_PATH_PROG(CHMOD_PATH, chmod)

# Checks for header files.
AC_HEADER_STDC
AC_CHECK_HEADERS([stdlib.h])

# CXX specifics
AC_CXX_NAMESPACES
AC_CXX_STATIC_CAST

# Checks for typedefs, structures, and compiler characteristics.
AC_C_CONST
AC_HEADER_TIME
AC_STRUCT_TM

AC_PROG_MAKE_SET

AC_CONFIG_FILES([Makefile m4/Makefile src/librtdebug.pro])

AC_OUTPUT
